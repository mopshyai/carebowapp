{
  "name": "carebow",
  "version": "1.0.0",
  "private": true,
  "description": "Healthcare at your fingertips - A modern React Native healthcare companion app",
  "repository": {
    "type": "git",
    "url": "https://github.com/mopshyai/carebowapp.git"
  },
  "author": "CareBow Inc.",
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@carebow/web",
    "dev:api": "turbo run dev --filter=@carebow/api",
    "dev:mobile": "turbo run dev --filter=@carebow/mobile",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@carebow/web",
    "build:api": "turbo run build --filter=@carebow/api",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "test:watch": "turbo run test -- --watch",
    "test:coverage": "turbo run test -- --coverage",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "ios": "pnpm --filter @carebow/mobile ios",
    "android": "pnpm --filter @carebow/mobile android",
    "pod-install": "pnpm --filter @carebow/mobile pod-install",
    "db:push": "pnpm --filter @carebow/api db:push",
    "db:migrate": "pnpm --filter @carebow/api db:migrate",
    "db:studio": "pnpm --filter @carebow/api db:studio",
    "db:seed": "pnpm --filter @carebow/api db:seed",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.8.1",
    "standard-version": "^9.5.0",
    "turbo": "^2.7.5",
    "turbo-darwin-arm64": "^2.7.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20"
  }
}
