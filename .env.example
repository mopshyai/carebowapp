# CareBow Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# API Configuration (apps/api/.env)
# =============================================================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/carebow"

# Authentication
AUTH_SECRET="your-secret-key-here-min-32-chars"
NEXTAUTH_URL="http://localhost:3001"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
APPLE_CLIENT_ID=""
APPLE_CLIENT_SECRET=""

# =============================================================================
# Mobile App Configuration (apps/mobile/.env)
# =============================================================================

# API
API_URL="http://localhost:3001"

# AI Services
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Analytics
MIXPANEL_TOKEN=""
AMPLITUDE_API_KEY=""

# Error Tracking
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Push Notifications
FIREBASE_PROJECT_ID=""
FIREBASE_API_KEY=""

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_VOICE_INPUT=true
ENABLE_TELEMEDICINE=false

# =============================================================================
# Development
# =============================================================================

# Debug mode
DEBUG=false
LOG_LEVEL="info"
